extends layout

block content
  h1=title

  form(action="/books/new/create", method="post")
    if(errors)
      h2.error Oops you're missing something!
      ul.error
        each error in errors
          li
            =error.message
    p
      label(for='title') Title         
      input#title(name='title', type='text', value=books.title)
    p
      label(for='author') Author
      input#author(name='author', type='text', value=books.author)
    p
      label(for='genre') Genre
      input#genre(name='genre', type='text', value=books.genre)
    p
      label(for='year') Year
      input#year(name='year', type='text', value = books.year)
    p
      input(type='submit', value='Create New Book')
    p
      a.button(href='/') Cancel
